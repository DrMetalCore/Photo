<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Photo"
             x:Class="Photo.MainPage">
    <ScrollView>
        <StackLayout>
            <Button Text="Prendre une photo" Clicked="PrendrePhoto_Clicked"/>
            <Button Text="Choisir une photo" Clicked="ChoisirPhoto_Clicked"/>
            <Image x:Name="image"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
